#!/bin/bash

# kurbeScript: Start a local Kubernetes cluster and verify it

# Check if minikube is installed
if ! command -v minikube &> /dev/null
then
    echo "Minikube is not installed. Please install it first: https://minikube.sigs.k8s.io/docs/start/"
    exit 1
fi

echo "Starting Minikube..."
minikube start

# Check if the cluster is running
echo "Verifying Kubernetes cluster..."
kubectl cluster-info

# Retrieve available pods in all namespaces
echo "Listing all pods in all namespaces..."
kubectl get pods --all-namespaces

echo "Kubernetes setup complete!"
